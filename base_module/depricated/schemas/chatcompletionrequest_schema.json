{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "model": {
      "type": "string"
    },
    "messages": {
      "type": "array",
      "items": {
        "$ref": "ChatMessage"
      }
    },
    "stream": {
      "type": "boolean"
    },
    "temperature": {
      "type": "number"
    },
    "thread_id": {
      "type": "string"
    }
  },
  "required": ["model", "messages"]
}
